{
  "manifest_version": 3,
  "name": "Multi Channel Reply Support Tool",
  "version": "0.1.0",
  "description": "Provides AI-powered reply assistance on Gmail, Chatwork, and Google Chat.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.chatwork.com/*",
    "https://chat.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Multi Channel Reply Support",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://www.chatwork.com/*",
        "https://chat.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "popup/*"],
      "matches": [
        "https://mail.google.com/*",
        "https://www.chatwork.com/*",
        "https://chat.google.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}