{
  "name": "multi-channel-reply-support-tool",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:clean && npm run build:background && npm run build:content && npm run build:popup",
    "build:clean": "rm -rf dist",
    "build:background": "BUILD_TARGET=background vite build",
    "build:content": "npm run build:content-gmail && npm run build:content-line && npm run build:content-chatwork && npm run build:content-google-chat",
    "build:content-gmail": "BUILD_TARGET=content-gmail vite build",
    "build:content-line": "BUILD_TARGET=content-line vite build", 
    "build:content-chatwork": "BUILD_TARGET=content-chatwork vite build",
    "build:content-google-chat": "BUILD_TARGET=content-google-chat vite build",
    "build:popup": "BUILD_TARGET=popup vite build",
    "build:watch": "vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/chrome": "^0.0.329",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vite-plugin-static-copy": "^3.1.0"
  }
}
